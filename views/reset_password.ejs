<%- include('partials/navbar') %>
<main style="max-width: 400px; margin: 50px auto; padding: 20px;">
    <h2>Create New Password</h2>
    <form action="/reset-password/<%= token %>" method="POST">
        <input type="password" name="newPassword" placeholder="New Password" required style="width: 100%; padding: 10px; margin-bottom: 10px;">
        <button type="submit" class="btn-primary" style="width: 100%;">Update Password</button>
    </form>
</main>
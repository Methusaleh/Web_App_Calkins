<main style="max-width: 400px; margin: 50px auto; padding: 20px;">
    <h2>Create New Password</h2>
    
    <form action="/reset-password/<%= token %>" method="POST">
        <input type="password" name="newPassword" placeholder="New Password" required style="width: 100%; padding: 10px; margin-bottom: 15px; border: 1px solid #ddd; border-radius: 4px;">
        <button type="submit" style="width: 100%; padding: 10px; background: #2563eb; color: white; border: none; border-radius: 4px; cursor: pointer;">Update Password</button>
    </form>
</main>

